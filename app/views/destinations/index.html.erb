<p id="notice"><%= notice %></p>

<h1>Listing Destinations</h1>

<ul class="nav nav-pills" role="tablist">
  <li><%= link_to "All", destinations_path %></li>
  <% @my_countries.each do |c| %>
  <li><%= link_to c.country, destinations_path(country: c.country) %></li>
  <% end %>
</ul>

<%= link_to 'New Destination', new_destination_path, class: "btn btn-success" %>


<div class="row">
    <% @destinations.each do |destination| %>
      <div class="col-md-4">
        <div class="well">
        <h2><%= "#{destination.city}, #{destination.country}"%></h2>
        <p><strong>Pop:</strong> <%= number_with_delimiter destination.population %></p>
        <p><%= destination.description.html_safe %></p>
        <div class="btn-group">
          <%= link_to 'Show', destination, class: "btn btn-default" %> <%= link_to 'Edit', edit_destination_path(destination), class: "btn btn-default" %> <%= link_to 'Destroy', destination, class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>

        </div>
      </div>
    <% end %>
</div>

<br>


